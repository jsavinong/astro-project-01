---
interface Props {
    post: {
    title: string;
    excerpt: string;
    date: string;
    image: string;
    slug: string;
    };
    }

    const { post } = Astro.props;
    ---

    <article class="bg-white rounded-lg shadow-md overflow-hidden">
    <img
    src={post.image}
    alt={post.title}
    class="w-full h-48 object-cover"
    />
    <div class="p-6">
    <time class="text-sm text-gray-500">{new Date(post.date).toLocaleDateString()}</time>
    <h2 class="text-xl font-bold text-gray-900 mt-2 mb-3">
        <a href={`/blog/${post.slug}`} class="hover:text-primary-600">
        {post.title}
        </a>
    </h2>
    <p class="text-gray-600 mb-4">{post.excerpt}</p>
    <a
        href={`/blog/${post.slug}`}
        class="text-primary-600 hover:text-primary-700 font-medium inline-flex items-center"

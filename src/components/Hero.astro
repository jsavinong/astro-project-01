---
import Button from './ui/Button.astro';
---

<section class="relative min-h-[80vh] flex items-center">
    <div class="absolute inset-0 bg-gradient-to-b from-primary-50/50 to-white"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 relative">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900">
            <span class="block">Transform Your Life</span>
            <span class="block text-primary-600">Through Understanding</span>
        </h1>
        <p class="mt-6 text-lg sm:text-xl text-gray-600 max-w-2xl">
            Join Dr. Sarah Johnson on a journey of self-discovery and personal growth. Learn practical strategies for better mental health and well-being.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <Button href="/book">
            Discover the Book
            <svg class="ml-2 w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            </Button>
            <Button href="/about" variant="secondary">
            About Dr. Johnson
            </Button>
        </div>
        </div>

        <div class="relative">
        <div class="relative z-10 transform hover:-translate-y-2 transition-transform duration-300">
            <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-primary-500 to-primary-600 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-300"></div>
            <img
                src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80"
                alt="Book Cover"
                class="relative rounded-lg shadow-xl"
            />
            </div>
        </div>
        <div class="absolute bottom-0 right-0 w-48 h-48 rounded-full overflow-hidden border-4 border-white shadow-lg">
            <img
            src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?w=400&h=400&q=80"
            alt="Dr. Sarah Johnson"
            class="w-full h-full object-cover"
            />
        </div>
        </div>
    </div>
    </div>
</section>